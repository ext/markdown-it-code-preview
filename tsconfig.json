{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",

    "emitDeclarationOnly": true,
    "declaration": true,

    "target": "es2020",
    "lib": ["es2020"],
    "module": "esnext",
    "moduleResolution": "node",

    "sourceMap": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "strict": true
  },
  "include": ["./src/**/*.ts"]
}
